@model Ignite.Models.ParentModels.ChangeClassesParentModel

<link rel="stylesheet" href="~/css/ChangeClass.css" />

<div id="Info">
    <h3>Start date and description can be left empty. <br \>That way they will not be changed.</h3>
</div>

<div class="ChangeWidget col-24">
    <div class="d-flex delimiter">
        <div>
            <h2 id="changeTitle">Change Class</h2>
        </div>
        <div>
            <h2 id="OldTitle">Old Data</h2>
        </div>
    </div>

    <form action="/Administration/AdminClasses/ChangeClass" method="post" asp-antiforgery="true">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="InputModel.Guid" hidden value="@Model.ViewModel.Guid" />

        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.Name" class="form-label" hidden></label>
                <input asp-for="InputModel.Name" class="form-control form-control1" aria-required="true" placeholder="Name" value="@Model.ViewModel.Name" />
            </div>
            <div>
                <h4>
                    <strong>Name:</strong>
                    @Model.ViewModel.Name
                </h4>
            </div>
        </div>

        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.Address" class="form-label" hidden></label>
                <input asp-for="InputModel.Address" class="form-control form-control1" aria-required="true" placeholder="Address" value="@Model.ViewModel.Address" />
            </div>
            <div>
                <h4>
                    <strong>Address:</strong>
                    @Model.ViewModel.Address
                </h4>
            </div>
        </div>

        <div class=" d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.Description" class="form-label"></label>
                <textarea asp-for="InputModel.Description" class="form-control form-control1"></textarea>
            </div>
            <div>
                <h4>
                    <strong>Description:</strong>
                </h4>
                <div class="form-control1" id="descriptionOld">
                    <p>
                        @Model.ViewModel.Description
                    </p>
                </div>
            </div>
        </div>

        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.StartingDateTime" id="dateLabel" class="form-label">Start Date & Time</label>
                <input asp-for="InputModel.StartingDateTime" class="form-control" id="picker" />
            </div>
            <div>
                <h4>
                    <strong>Starts:</strong>
                    @Model.ViewModel.StartingDateTime.ToString("dd/MM/yyyy HH:mm")
                </h4>
            </div>
        </div>
        <br \>
        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.DurationInMinutes" class="form-label">Duration (in minutes)</label>
                <input asp-for="InputModel.DurationInMinutes" class="form-control form-control1" aria-required="true" placeholder="Duration (in minutes)" value="@Model.ViewModel.DurationInMinutes" />
            </div>
            <div>
                <h4>
                    <strong>Duration(in minutes):</strong>
                    @Model.ViewModel.DurationInMinutes
                </h4>
            </div>
        </div>

        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.Price" class="form-label"></label>
                <input asp-for="InputModel.Price" class="form-control form-control1" aria-required="true" placeholder="Price" value="@Model.ViewModel.Price" />
            </div>
            <div>
                <h4>
                    <strong>Price:</strong>
                    $@Model.ViewModel.Price
                </h4>
            </div>
        </div>

        <div class="d-flex delimiter">
            <div class="col-5">
                <label asp-for="InputModel.AllSeats" class="form-label">All Seats</label>
                <input asp-for="InputModel.AllSeats" class="form-control form-control1" aria-required="true" placeholder="All Seats" value="@Model.ViewModel.AllSeats" />
            </div>
            <div>
                <h4>
                    <strong>All Seats:</strong>
                    @Model.ViewModel.AllSeats
                </h4>
            </div>
        </div>

        <button id="changeButton" type="submit" class="w-100 btn btn-background-slide btn-lg btn-success">Change</button>
    </form>
</div>



